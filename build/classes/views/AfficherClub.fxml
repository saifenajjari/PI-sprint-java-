<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="957.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClubController">
   <left>
      <VBox prefHeight="600.0" prefWidth="290.0" spacing="10.0" style="-fx-background-color: #e10ab2;" styleClass="background" stylesheets="@../styles/Styles.css" BorderPane.alignment="CENTER">
         <children>
            <Label text="Ajouter Un Club" textAlignment="CENTER" textFill="PINK">
               <font>
                  <Font name="Bodoni MT" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="60.0" top="30.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="id" promptText="Id" />
            <TextField fx:id="jardin" prefHeight="30.0" prefWidth="246.0" promptText="Jardin">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <TextField fx:id="contact" prefHeight="30.0" prefWidth="246.0" promptText="Contact">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <Button fx:id="importerImage" layoutX="55445.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#importerImage" style="-fx-background-color: pink;" text="Choisissez Image">
               <VBox.margin>
                  <Insets bottom="-10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </Button>
            <TextField fx:id="photo" prefHeight="30.0" prefWidth="246.0" promptText="Photo">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
            <ImageView fx:id="imgview" fitHeight="105.0" fitWidth="181.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets left="55.0" right="25.0" />
               </VBox.margin>
            </ImageView>
            <TextField fx:id="nom" prefHeight="30.0" prefWidth="262.0" promptText="Nom">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin></TextField>
            <TextField fx:id="desc" promptText="Description">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="nbact" promptText="Nombre des activités">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="87.0" prefWidth="290.0" spacing="10.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Button fx:id="delete" mnemonicParsing="false" onAction="#delete" prefHeight="30.0" prefWidth="95.0" style="-fx-background-color: red;" text="SUPPRIMER" textFill="WHITE">
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                     </effect>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button fx:id="saveUser" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveUser" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: green;" text="AJOUTER" textFill="WHITE">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                     </effect>
                  </Button>
                  <Button fx:id="modifier" mnemonicParsing="false" onAction="#modifier" prefHeight="30.0" prefWidth="87.0" style="-fx-background-color: yellow;" text="MODIFIER">
                     <font>
                        <Font size="10.0" />
                     </font></Button>
                  <Button fx:id="reset" mnemonicParsing="false" onAction="#reset" prefHeight="30.0" prefWidth="75.0" text="RESET" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_RIGHT" prefHeight="571.0" prefWidth="692.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="640.0">
               <children>
                  <TextField fx:id="recherche" alignment="TOP_LEFT" promptText="Recheche...">
                     <HBox.margin>
                        <Insets left="100.0" right="250.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children></HBox>
            <TableView id="table-view" fx:id="clubTable" prefHeight="300.0" prefWidth="679.0" stylesheets="@../StyleSheets/style.css" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="colJardin" maxWidth="4000.0" prefWidth="75.0" text="Jardin" />
                  <TableColumn fx:id="colContact" maxWidth="4000.0" prefWidth="75.0" text="Contact" />
                  <TableColumn fx:id="colPhoto" maxWidth="4000.0" prefWidth="75.0" text="Photo" />
                  <TableColumn fx:id="colNom" maxWidth="4000.0" prefWidth="60.0" text="Nom" />
                  <TableColumn fx:id="colDesc" maxWidth="4000.0" prefWidth="75.0" text="Description" />
                  <TableColumn fx:id="colNbAct" maxWidth="6000.0" prefWidth="130.0" text="Nombre des activités" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="5.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="deleteUsers" mnemonicParsing="false" onAction="#deleteUsers" text="Delete" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
            <Label style="-fx-background-color: pink;" text="Espace Clubs" textFill="#e10ab2">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="90.0" />
               </font>
               <VBox.margin>
                  <Insets left="25.0" right="80.0" top="50.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>
